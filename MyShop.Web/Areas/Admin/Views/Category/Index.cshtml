@model IEnumerable<Category>


@{
	ViewBag.PageTitle = "Category Management";
	ViewBag.CardTitle = "View Category";
	Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div>
	<a href="/Admin/Category/Create" class="btn btn-primary">Create</a>
</div>


<br>
<table class="table table-hover" width="100%">

	<thead class="text-bold">
	<tr>
		<td>Name</td>
		<td>Description</td>
		<td>Create At</td>
		<td>Edit</td>
		<td>Delete</td>
	</tr>
	</thead>
	@foreach(var item in Model)
	{
		<tr>
			<td>@item.Name</td>
			<td>@item.Description</td>
			<td>@item.CreatedAt</td>
			<td><a href="/Admin/Category/Edit/@item.Id" class="btn btn-success">Edit</a></td>
			<td> <form asp-action="Delete" asp-route-id="@item.Id" method="post">
               <button type="submit" class="btn btn-danger">Delete</button></form></td>
		</tr>
	}

</table>